int main()
{
    int total_number_of_shelves;
    scanf("%d", &total_number_of_shelves);
    
    int total_number_of_queries;
    scanf("%d", &total_number_of_queries);
    total_number_of_books = calloc(total_number_of_shelves, sizeof(int));
    total_number_of_pages = malloc(total_number_of_queries * sizeof(int *));
    for(int index = 0; index < total_number_of_shelves; index++) {
        *(total_number_of_pages + index) = NULL;
    }
    
    
    while (total_number_of_queries--) {
        int type_of_query;
        scanf("%d", &type_of_query);
        
        if (type_of_query == 1) {
            /*
             * Process the query of first type here.
             */
            int shelf, books;
            scanf("%d %d", &shelf, &books);
            int books_count = *(total_number_of_books + shelf);
            books_count++;
            *(total_number_of_pages + shelf) = realloc(*(total_number_of_pages + shelf), books_count * sizeof(int));
            *(*(total_number_of_pages + shelf) + books_count - 1) = books;
            *(total_number_of_books + shelf) = books_count;
            
            
